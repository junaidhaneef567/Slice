<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_weight=".3"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="37.5dp"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:src="@drawable/ic_person"
                    android:id="@+id/profile_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:weightSum="2"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_tv"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Junaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/handle_tv"
                    android:textSize="16sp"
                    android:text="Junaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/count_tv"
                    android:layout_gravity="center"
                    android:text="111"
                    android:drawableEnd="@drawable/ic_fav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/retweet_tv"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="111"
                    android:drawableEnd="@drawable/ic_retweet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>


        <TextView
            android:layout_marginBottom="20dp"
            android:id="@+id/text_tv"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="ffffffffffffffffffffffffffffffffffffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </LinearLayout>




</androidx.cardview.widget.CardView>